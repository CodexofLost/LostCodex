      android:pathData="M512,160 L392,220 L452,300 L512,260 Z">
      <aapt:attr name="android:fillColor">
          <gradient
              android:type="linear"
              android:startX="0"
              android:startY="0"
              android:endX="1024"
              android:endY="1024">
              <item android:offset="0.0" android:color="#A64DFF" />
              <item android:offset="1.0" android:color="#FF2FBF" />
          </gradient>
      </aapt:attr>
  </path>

